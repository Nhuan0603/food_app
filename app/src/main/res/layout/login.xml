<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ff_7">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_email_login"
        android:layout_width="300dp"
        android:hint="Username"
        android:layout_gravity="center"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        android:layout_marginTop="1in"
        app:boxCornerRadiusTopStart="20dp"
        app:startIconDrawable="@drawable/ic_user"

        app:counterEnabled="true"
        app:counterMaxLength="20"

        android:textColorHint="#80808080"

        app:helperTextEnabled="true"
        app:helperText="Enter Username"
        app:counterTextColor="@color/green"
        app:helperTextTextColor="@color/green"

        app:boxBackgroundMode="outline"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_email_login_content"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_password_login"
        android:layout_width="300dp"
        android:hint="@string/ed_pass"
        android:layout_gravity="center"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:startIconDrawable="@drawable/ic_lock"

        app:counterEnabled="true"
        app:counterMaxLength="20"

        app:endIconMode="password_toggle"
        android:textColorHint="#80808080"

        app:helperTextEnabled="true"
        app:helperText="Enter password"
        app:counterTextColor="@color/green"
        app:helperTextTextColor="@color/green"

        app:boxBackgroundMode="outline"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_password_login_content"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textSize="24sp"
            >
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        style="@style/BUTTON"
        android:id="@+id/btn_login_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/log_in"
        android:backgroundTint="@color/orange_2"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/fogot"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/btnsignin1"
        />
    <TextView
        android:id="@+id/tv_backRegister"
        android:text="Back to Register"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


</LinearLayout>