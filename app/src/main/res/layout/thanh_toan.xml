<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Pay"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:text="Thanh toán"
        android:textSize="30sp"
        android:textStyle="bold"
        >

    </TextView>


    <View
        android:id="@+id/view3"
        android:layout_width="300dp"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@color/orange_2"
        android:layout_below="@+id/textView2">
    </View>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view3">

        <TextView
            android:id="@+id/tv_distant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="238dp"
            android:layout_marginBottom="10dp"
            android:text="Distant">

        </TextView>

        <TextView
            android:id="@+id/tv_km"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/tv_distant"
            android:text="KM">

        </TextView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_location">

        </ImageView>

        <TextView
            android:id="@+id/tv_dcTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Địa chỉ nhận hàng"
            android:textStyle="bold"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dcTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="User'name">

        </TextView>

        <TextView
            android:id="@+id/tv_userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dcTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_userName"
            android:text="user'phone">

        </TextView>

        <TextView
            android:id="@+id/tv_userLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="user'location">

        </TextView>

        <ImageView
            android:id="@+id/img_fixLocation"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_nagitive_next_orange">

        </ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tonngPhiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tổng phí"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/relativeLayout">

    </TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="5dp"
        android:background="#31808080"
        android:layout_below="@+id/tv_tonngPhiTitle">

        <TextView
            android:id="@+id/tv_priceProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Giá sản phẩm: "
            android:textSize="19sp">

        </TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:text="Price Product"
            android:textSize="19sp">

        </TextView>

        <TextView
            android:id="@+id/tv_priceDeliveryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_priceProductTitle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Phí giao hàng: "
            android:textSize="19sp">

        </TextView>

        <TextView
            android:id="@+id/tv_priceDelivery"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="40dp"
            android:text="Price Delivery"
            android:textSize="19sp">

        </TextView>

        <View
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_priceDeliveryTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="#808080">

        </View>

        <TextView
            android:id="@+id/tv_tongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Tổng: "
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_priceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:text="Total"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_methodPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Phương thức thanh toán"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_below="@+id/relativeLayout2">

    </TextView>

    <RelativeLayout
        android:id="@+id/rl_methodPay"
        android:background="#31808080"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_methodPay">

        <ImageView
            android:id="@+id/ic_cash"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_cash">

        </ImageView>

        <TextView
            android:id="@+id/tv_cash"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/ic_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền mặt"
            android:textSize="19sp">

        </TextView>

        <ImageView
            android:id="@+id/ic_fixMethodPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_nagitive_next_black">

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dieuKhoan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="#31808080"
        android:layout_below="@+id/rl_methodPay">

        <ImageView
            android:id="@+id/img_dieuKhoan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_dieu_khoan">

        </ImageView>
        <TextView
            android:layout_toEndOf="@id/img_dieuKhoan"
            android:layout_marginTop="8dp"
            android:id="@+id/tv_dieuKhoan"
            android:text="Nhấn ĐẶT HÀNG đồng nghĩa với việc bạn đồng ý tuân theo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_dieuKhoan"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/tv_totalTitleBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="1dp"
            android:text="Tổng thanh toán"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/tv_totalPriceBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_totalTitleBottom"
            android:textAlignment="textEnd"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="231dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="3dp"
            android:text="Total"
            android:textSize="18sp">

        </TextView>

        <Button
            android:id="@+id/btn_datHang"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:backgroundTint="#FF5722"
            android:text="Đặt hàng">

        </Button>
    </RelativeLayout>


</RelativeLayout>